<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Libres libros</title>
    <link rel="stylesheet" href="css/home.css">
    <script src="https://kit.fontawesome.com/25a3935e62.js" crossorigin="anonymous"></script>
</head>
<body>
      <!-- HEADER MOBIL -->
      <!-- HEADER DESK -->
      <%- include('partials/header') %>
      
      <main class="main-carrito">

        <h4 class="titulo-producto">Productos</h4>
        <div class="section-contenedor">
          <section class=main-producto-top>
            <article class="productos">
  
              <figure class="img-libro">
                <img src="images/harry potter y el legado maldito.jpg" alt="Harry-potter" class="img-producto">
              </figure>
              <figcaption class="descripcion">
                <div>
    
                    <p>Producto</p>
                    <p>precio</p>
    
                </div>
      
              <form class="incremento">
                  <button type="reset" class="btn-delete">Eliminar</button>
                  <button type=submit class="btn-guardar">Guardar</button>
              </form>
    
            </figcaption>
            
            <label class="cantidad-producto">
              <button class="btn-resta"><i class="fa-solid fa-plus"></i></button> 3 <button class="btn-suma"><i class="fa-solid fa-minus"></i></button>
            </label>
            </figure>
  
  
  
  
  
            </article>
  
              <!-- <button type="reset" class="btn-borrar">X</button> -->
          
          </section>
          <!-- seccion del resumen de compra -->
          <section class="main-resumen">
  
            <div class="resumen-compra">
              <h4>Resumen de compra</h4>
            </div>
  
            <article class="resumen-compra-total">
                  <div class="producto-envio">
                      <div class="detalle">
                          <p class="text-resumen">Producto</p>
                          <p class="text-resumen"><i class="fa-solid fa-dollar-sign"></i> 31.000</p>
                      </div>
                      <div class="detalle">
                          <p class="text-resumen">Envio</p>
                          <p class="text-resumen"><i class="fa-solid fa-dollar-sign"></i> 1.312</p>
                      </div>
                  </div>
  
  
                  <div class="total">
                      <p class="text-resumen">Total</p>
                      <p class="text-resumen"><i class="fa-solid fa-dollar-sign"></i> 123.152</p>
                  </div>
                  
                  <div class="contenedor-btn">
                    <button type="submit" class="btn-compra">Comprar</button>
                  </div>
                </article>
  
          </section>

        </div>
        


      
      </main>

  <!-- FOOTER -->
<%- include('partials/footer') %>    
</body>
</html>
